<%= form_for(@restaurant) do |restaurant| %>
  <div class="form-group">
    <%= restaurant.label :name %>
    <%= restaurant.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= restaurant.label :address %>
    <%= restaurant.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= restaurant.label :category %>
    <%= restaurant.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'], class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= restaurant.label :phone_number %>
    <%= restaurant.text_field :phone_number, class: 'form-control' %>
  </div>




