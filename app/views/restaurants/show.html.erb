<div id="container">
  <div class="content">

    <h1>View restaurant:
      <%= @restaurant[:name]%></h1>
    <ul>
      <li>Name:
        <%= @restaurant[:name]%></li>
      <li>Address:
        <%= @restaurant[:address]%></li>
      <li>Category
        <%= @restaurant[:category]%></li>
      <li>Contact
        <%= @restaurant[:phone_number]%></li>
    </ul>


  </div>
<h2>Comments:</h2>
  <div class="content">
    <ul>
      <%  @restaurant.reviews.each do |review|%>
        <li>
          <div class="restaurant">
            <%= review[:content] %>
            -
            <%= review[:rating] %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="button">
    <%= link_to "go back to list", "/restaurants" %>
  </div>

</div>
